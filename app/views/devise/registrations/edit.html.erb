<div class="page-container">
  <div class="form-container">
    <div class="form-content">
    <h4>プロフィール写真変更</h4>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="change-image-container">
          <div class="change-profile-image">
            <% if @user.image.attached? %>
              <%= image_tag @user.image, class: "profile-image" %>
            <% else %>
              <%= image_tag "default_icon.jpg", class: "profile-image" %>
            <% end %>
          </div>
        </div>
        <div class="change-field-container">
          <div class="change-field">          
              <div class="field">
                <%= f.file_field :image, accept: '.jpg, .png,' %>
              </div>
              <div class="field">
                <%= f.submit "変更する", class:"submit-btn" %>
              </div>
              <div class="field">
                <%= link_to  "プロフィールに戻る","/user/#{current_user.id}", class:"link" %>
              </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
