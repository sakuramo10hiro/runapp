<div class="page-container">
  <div class="form-container">
    <div class="form-content">
      <h2>新規ユーザー登録</h2>
      <div class="field-item-container">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field-item">
            <%= f.label :ユーザー名, class:"item-label" %> <br />
            <%= f.text_field :name, class:"text-field" %>
          </div>
          <div class="field-item">
            <%= f.label :メールアドレス, class:"item-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"text-field" %>
          </div>
          <div class="field-item">
            <%= f.label :パスワード, class:"item-label" %><br>
            <% if @minimum_password_length %>
            <span class="item-sub-label">(<%= @minimum_password_length %>文字以上で登録してください)</span>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class:"text-field" %>
          </div>
          <div class="field-item">
            <%= f.label :パスワード再入力, class:"item-label" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"text-field" %>
          </div>
          <div class="actions">
            <%= f.submit "新規登録", class:"submit-btn" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
