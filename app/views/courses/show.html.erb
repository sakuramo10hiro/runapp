<div class="page-container">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <%= link_to "#{current_user.name}のコース", mypage_path, class:"nav-link active" %>
    </li>
    <li class="nav-item">
      <%= link_to "その他のコース", otherpage_path, class:"nav-link" %>
    </li>
  </ul>
  <div class="inside-container">
    <div class="new-course">
      <%= link_to(new_course_path) do %> 
        <button type="button" class="btn btn-outline-success create-btn">新規作成</button>
      <% end %>
    </div> 
    <div class="panel-container">
        <div class="course-panel">
          <div class="panel-lower">
          <p>投稿者: <%= link_to(@course.user.name, "/user/#{@course.user.id}") %></p>
            <% if @course.user.image.attached? %>
              <%= image_tag @course.user.image, class:"icon-image" %>
            <% else %>
              <%= image_tag "default_icon.jpg", class:"icon-image" %>
            <% end %>
          </div>
            <h2><%= @course.course_name %></h2>
            <p>コース説明: <%= @course.course_description %></p>
            <p>距離: <%= @course.distance %> km </p>
            <p>ロードタイプ: <%= @road_type[@course.road_type] %></p>
            <p>コースルート: <%= @route[@course.route] %></p>
            <p>公園やトイレ: <%= @toilet[@course.toilet] %></p>
            <p>起伏: <%= @undulation[@course.undulation] %></p>
            <p>信号: <%= @signal[@course.signal] %></p>
            <!-- 住所表示エリア -->            
            <p>地図: <%= @course.address %></p>
            <div id='map'></div>
            <!-- Googleマップ表示用の Javascript -->
            <script>
              function initMap(){
                // 地図の位置情報(緯度・経度)を取得
                let mapPosition = {lat: <%= @course.latitude || 0 %> , lng: <%= @course.longitude || 0 %> };
                let map = new google.maps.Map(document.getElementById('map'), {
                  zoom: 15,
                  center: mapPosition
                });
                let transitLayer = new google.maps.TransitLayer();
                transitLayer.setMap(map);
            
                let contentString = '【住所】<%= @course.address %>';
                let infowindow = new google.maps.InfoWindow({
                  content: contentString
                });
            
                let marker = new google.maps.Marker({
                  position: mapPosition,
                  map: map,
                  title: contentString
                });
            
                marker.addListener('click', function(){
                  infowindow.open(map, marker);
                });
              }
              </script>
              <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAP_API_KEY'] %>&callback=initMap" async defer></script>
            <div class="course-image-container">
              <% if @course.course_image.attached? %>
                <%= image_tag @course.course_image, class: "course-image" %>
              <% else %>
                <%= image_tag "no-images.png", class: "course-image" %>
              <% end %>
            </div>
            <div class= "public" >
              <p>公開設定: <%= @course.public == true ? "公開" : "非公開" %></p>
            </div>
            <div class= "comment_container" >
              <%= form_with(model:[@course, @comment], method: :post) do |f| %>
                <%= f.text_area :comment_content,placeholder: 'コメント本文' %>
                <%= f.hidden_field :course_id, value: @course.id %>
                <br>
                <%= f.submit 'コメントする' %>
              <% end %>
              <p>コメント一覧</p>
              <% @comments.each do |c| %>
                <div>
                  <a href="/users/<%= @course.user.id %>"><%= c.user.name %></a>
                  <%= c.comment_content %>
                  <hr>
                </div>
              <% end %>
            </div>
            <div class=" list-footer">
              <div class="achieved-button">
                <%= link_to  new_course_path(id: @course.id) do %>
                <% end %>
              </div>
              <div class="list-icons">
                <% if @course.user == current_user %>
                  <div class="icon-link">
                    <%= link_to  edit_course_path(@course.id),  class: 'btn btn-primary mr-3' do  %>
                      <i class="fa-solid fa-pen-to-square">コース編集</i>
                    <% end %>
                  </div>
                  <div class="icon-link">
                    <%= link_to course_path(@course.id), method: :delete, class: 'btn btn-danger' do %>
                      <i class="fa-solid fa-trash-can">コース削除</i>
                    <% end %>
                  </div>
                <% end %>
              </div>  
            </div>
          </div>
        </div>
    </div>
  </div>
</div>
